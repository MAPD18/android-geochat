<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_user_name"
        android:inputType="textCapWords"
        android:key="key_user_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_user_name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_server_uri"
        android:inputType="textUri"
        android:key="key_server_uri"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_server_uri" />

    <ListPreference
        android:key="key_session_counter"
        android:title="@string/pref_session_counter"
        android:defaultValue="2"
        android:entries="@array/session_message_counter"
        android:entryValues="@array/session_message_counter_values" />


</PreferenceScreen>
